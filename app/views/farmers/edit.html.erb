<% if current_user.farmer_access == true && current_user.id == @farmer.user_id %>
<div class="main-section">
	<div class="main-heading">
		<h2>Edit Your Farmer Page</h2>
	</div>
	<%= render 'form' %>
<div class="destroy-text">
	<%= link_to 'Delete your Farmer Page', "/markets/#{@farmer.market_id}/farmers/#{@farmer.id}",
	method: :delete,
	data: {confirm: 'Are you sure?!?!'} %>
</div>
<% else %>
<p>
	This Farmer's Page does not belong to you.
</p>
<% end %>

<footer>
	<div class="nav-bot">
		<%= link_to 'Back to the Markets', markets_path %>
	</div>
</footer>
