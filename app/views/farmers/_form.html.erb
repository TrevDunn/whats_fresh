<%= form_for :farmer do |f| %>

<% if @farmer.errors.any? %>
	<div id="error_message">
		<h2>
			<%= pluralize(@farmer.errors.count,"error") %>
		</h2>
		<ul>
			<% @farmer.errors.full_messages.each do |msg| %>
				<li>
					<%= msg %>
				</li>
			<% end %>
		</ul>
	</div>
<% end %>
<% @farmer.user_match = current_user.id %>
<p>
	<%= f.label :name %><br>
	<%= f.text_field :name %><br/>
</p>
<p>
	<%= f.label :email %><br>
	<%= f.text_field :email %><br/>
</p>
<p>
	<%= f.label :website %><br>
	<%= f.text_field :website %><br/>
</p>
<p>
	<%= f.label :description %>
	<%= f.text_area :description %>
</p>
<p>
	<%= f.submit %>
</p>
<% end %>
