<div class="main-section">
	<div class="main-heading">
		<h2> Find Your Local Farmers' Market </h2>
	</div>
	<div class="main-list">
		<% @markets.each do |mrkt| %>
			<div class="headshot-links">
				<a href="<%= "/markets/#{mrkt.id}"%>">
					<img src="<%= mrkt.photo %>">
				</a>
				<h3><%= link_to "#{mrkt.name}", "/markets/#{mrkt.id}" %></h3>
				<%= mrkt.location %>
				<div class="market-info">
					<ul>
						<li>
							<%= mrkt.hours %>
						</li>
						<li>
							<%= mrkt.website %>
						</li>
					</ul>
				</div>
			</div>
		<% end %>
	</div>
</div>
